<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.martinsj.navegationdraw.MainActivity">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="531dp"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:background="@android:color/white"
        android:backgroundTint="@color/zxing_status_text"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1">

        <EditText
            android:id="@+id/editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="122dp"
            android:ems="10"
            android:hint="Digite Aqui"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textStyle="italic"
            tools:layout_editor_absoluteX="83dp"
            tools:layout_editor_absoluteY="16dp"
            android:layout_below="@+id/textView5"
            android:layout_alignLeft="@+id/textView5"
            android:layout_alignStart="@+id/textView5" />
        <ImageButton
            android:id="@+id/ivAttachment"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/attach_icon"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:layout_alignBottom="@+id/editText"
            android:layout_toRightOf="@+id/editText"
            android:layout_toEndOf="@+id/editText" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="59dp"
            android:text="Gerar QR Code"
            android:textAlignment="center"
            android:textSize="40sp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/btnLoginFtp"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Login to FTP"
            android:layout_alignBaseline="@+id/btnUploadFile"
            android:layout_alignBottom="@+id/btnUploadFile"
            android:layout_toLeftOf="@+id/button"
            android:layout_toStartOf="@+id/button" />
        <Button
            android:id="@+id/btnUploadFile"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Upload file to FTP"
            android:layout_above="@+id/button"
            android:layout_alignRight="@+id/textView5"
            android:layout_alignEnd="@+id/textView5"
            android:layout_marginBottom="15dp" />

        <ImageButton
            android:id="@+id/button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="36dp"
            app:srcCompat="@drawable/qrcodeatt" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>